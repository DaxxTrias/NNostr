<IonModal Visible="Open">
    <IonHeader>
        <IonToolbar>
            <IonTitle>
                @Title
            </IonTitle>
            <IonButtons slot="end">
                <IonButton OnClick="() => OpenChanged.InvokeAsync(false)">Close</IonButton>
            </IonButtons>
        </IonToolbar>
    </IonHeader>
    <IonContent fullscreen>
        @ChildContent
    </IonContent>
</IonModal>

@code{

    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public bool Open { get; set; }
    [Parameter]
    public EventCallback<bool> OpenChanged { get; set; }
    
    
    [Parameter] public RenderFragment ChildContent { get; set; }       

}